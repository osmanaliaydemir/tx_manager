{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER; Database=YOUR_DB; User Id=YOUR_USER; Password=YOUR_PASSWORD; Encrypt=True; TrustServerCertificate=True; MultipleActiveResultSets=True;"
  },
  "Encryption": {
    "AesKey": "CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_IN_SECRETS"
  },
  "Twitter": {
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "RedirectUri": "https://txmanager-api.runasp.net/api/auth/callback",
    "Scopes": "tweet.read tweet.write users.read offline.access"
  },
  "AI": {
    "ActiveProvider": "Gemini",
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "Model": "gpt-4o-mini"
    },
    "Gemini": {
      "ApiKey": "YOUR_GEMINI_API_KEY",
      "Model": "gemini-1.5-flash"
    },
    "DeepSeek": {
      "ApiKey": "YOUR_DEEPSEEK_API_KEY",
      "Model": "deepseek-chat"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434/v1/chat/completions",
      "Model": "llama3"
    }
  },
  "Hangfire": {
    "Dashboard": {
      "AllowedIPs": [ "https://txmanager-api.runasp.net" ],
      "Username": "",
      "Password": ""
    }
  },
  "Jwt": {
    "Issuer": "TX_Manager",
    "Audience": "TX_Manager.Mobile",
    "SigningKey": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET",
    "AccessTokenMinutes": 10080
  },
  "Push": {
    "Fcm": {
      "Enabled": false,
      "ServerKey": "",
      "Endpoint": "https://fcm.googleapis.com/fcm/send"
    }
  },
  "Scheduling": {
    "AutoSchedule": {
      "QuietHoursStartLocalHour": 23,
      "QuietHoursEndLocalHour": 8,
      "MinGapMinutes": 45,
      "SlotMinutes": 15,
      "MaxSearchDays": 30
    }
  }
}